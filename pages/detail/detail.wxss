/* pages/detail/detail.wxss */
page{
  padding-bottom: 90rpx;
  background-color: #eee;
}
.peek{
  text-align:  center;
  margin-top: 50rpx;
  width: 150rpx;
  height: 60rpx;
  background-color: #ff004cce;
  border-radius: 20rpx;
  color: #ffffff;
}
.main{
  margin-top: 70rpx;
  text-align: center;
  width: 100%;
  /* background-color: #fff; */
  color: var(--themeColor);
  font-size: 45rpx;
  font-weight: 500;
}
.append,.down{
 
  /* margin: 40rpx;  */
  padding: 40rpx;
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
}
.append{
  margin-top: 150rpx;
}
.item{
  flex: 1;
  font-size: 35rpx;
  font-weight: 500;
  /* display: flex; */
}
.down .item{
  font-size: 40rpx;
}

.to{
  width: 100rpx;
}
.up{
  margin-top: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-evenly;
  font-size: 45rpx;
  font-weight: 400;
  color:yellowgreen;
  align-items: center;
  background-color: #fff;
}
.num{
  margin-top: 20rpx;
  font-size: 45rpx;
  display: flex;
  background-color: #fff;
  justify-content: space-evenly;
}
.content{
  
  margin-top: 20rpx;
  padding-left: 30rpx;
  text-align: left;
  font-size: 35rpx;
  border-bottom: 1rpx solid #ccc;
}
.comment_item{
  color: rgb(65, 225, 217);

}
.btm_tool{
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-evenly;
}
.tool_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: 400;
}
.image_down{
  width: 50rpx;
}
.comment{
  text-align: center;
}